{% extends 'base.html.twig' %}

{% block title %}E-Commerce - S'enregistrer{% endblock %}

{% block meta %}E-Commerce, achetez tout votre matériel informatique au meilleur pix !{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="conteneur-principal">
        {# Nom et description de la page #}
        <section>
            <h1>S'enregistrer</h1>
            <hr>
            <p>
                Bienvenue sur Tech Treck Market !<br>
                Pour vous inscrire, remplissez le formulaire çi-dessous. Vous aurez ainsi accès à un espace personnel dédié et pourrez passer vos premères commandes.
            </p>
        </section>

        <section class="conteneur conteneur-login">
            {# Onglets #}
            <div class="onglets">
                <div class="onglet-section-login">
                    <a class="lien-onglet" href="{{ path('app_login') }}">Déja client ?</a>
                </div>
                <div class="onglet-section-login onglet-actif">
                    Nouveau client ?
                </div>
            </div>

            {# Formulaire d'inscription #}
            {{ form_start(registrationForm, {'attr': {'class': 'conteneur-padding'} }) }}
            {{ form_errors(registrationForm) }}
                <div class="formulaire-champ">
                    {{ form_row(registrationForm.email) }}
                </div>
                <div class="formulaire-champ formulaire-champ-mdp">
                    {{ form_row(registrationForm.plainPassword) }}
                </div>
                <div class="formulaire-champ">
                    <div class="formulaire-champ-horizontal">
                        {{ form_label(registrationForm.agreeTerms) }}
                        {{ form_widget(registrationForm.agreeTerms) }}
                    </div>
                </div>
                {{ form_row(registrationForm.Valider) }}
            {{ form_end(registrationForm) }}
        </section>
    </div>
{% endblock %}
